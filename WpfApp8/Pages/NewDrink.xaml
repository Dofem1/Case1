<Page x:Class="WpfApp8.Pages.NewDrink"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="150"
      Title="NewDrink">

    <Grid>
        <StackPanel Grid.Column="1" Background="#FFC6D4E0">
            <Label Content="Название" Width="124" RenderTransformOrigin="0.5,0.5" BorderThickness="0,50,0,0" Height="77"/>
            <TextBox TextWrapping="Wrap" Width="120" x:Name="DrinkName"/>
            <Image x:Name="Drinkpic" Height="106" Width="100"/>
            <TextBox x:Name="picpath" TextWrapping="Wrap" Width="120"/>
            <Button Content="Выберите файл" Margin="0,5,0,0" Width="103" Click="PicLoad_Button_Click"/>
            <Label Content="Цена" Width="125"/>
            <TextBox TextWrapping="Wrap" Width="120"/>
            <Label Content="Количество" Width="125"/>
            <TextBox TextWrapping="Wrap" Width="120"/>
            <Button Content="Добавить" Margin="0,5,0,0" Width="103"/>
        </StackPanel>
    </Grid>
</Page>
